include ../mixins/mixins
doctype html
html(lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://ogp.me/ns/fb#")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Jon Skinner's personal web portfolio!")
        meta(name="author" content="Jon Skinner")
        meta(property="og:image" content="http://jontriestocode.com/assets/images/desk-min.jpg")
        title jonTriesToCode()

        block vars

        block css
            // Favicons
            link(rel="shortcut icon" href="assets/images/favicon.ico")

            // Web Fonts
            link(href="https://fonts.googleapis.com/css?family=Poppins:400,500,600%7cPlayfair+Display:400i" rel="stylesheet")
            link(href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet")

            // Plugins
            link(href="assets/css/plugins.min.css" rel="stylesheet")

            // Template core CSS
            link(href="assets/css/template.css" rel="stylesheet")

    body

        = "\n"

        // Preloader
        .page-loader
            .page-loader-inner
                .spinner
                    .double-bounce1
                    .double-bounce2
        // Preloader end

        = "\n"

        if ( header_transparent == true )
            - var header_classes = "header-transparent"

        // Header
        header.header(class=header_classes)
            .container-fluid

                // Brand
                .inner-header
                    a.inner-brand(href="index.html")
                        |jonTriesToCode()

                // Navigation
                .inner-navigation.collapse
                    include navigation/navigation-single
        // Header end

        = "\n"

        // Wrapper
        .wrapper

            block content

            = "\n"

            include footer

        // Wrapper end

        = "\n"

        // To top button
        a(href="#top" class="scroll-top"): i.fas.fa-angle-up

        = "\n"

        // Scripts
        script(src="assets/js/custom/jquery-3.2.1.min.js")
        script(src="assets/js/custom/popper.min.js")
        script(src="assets/js/bootstrap/bootstrap.min.js")
        script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyA0rANX07hh6ASNKdBr4mZH0KZSqbHYc3Q")
        script(src="assets/js/custom/plugins.min.js")
        script(src="assets/js/custom/custom.min.js")
